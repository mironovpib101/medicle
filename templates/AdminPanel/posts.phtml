<script>
    var $body = $('body');

    //удаление поста
    $body.on('click', '.btn-delete', function () {
    	if(confirm('Вы уверены?')){
    		var id = $(this).data('id');
		    $.ajax({
			    url: '/admin/delete/posts/'+id+'/',
			    type: 'DELETE',
			    success: function(result) {
			    	alert(result.status ? 'Запись удалена' : 'Ошибка');
			    	if(result.status) location.reload();
			    },
                error: function () {
	                alert('Ошибка');
                }
		    });
        }
    });

    //создать пост
    $body.on('click', '.btn-create', function () {
	    $.ajax({
		    url: '/admin/form/posts/',
		    type: 'GET',
		    success: function(result) {
			    if(!result.status) return alert('Ошибка');
			    var $form = $(result.data);
			    $('textarea.editor', $form).each(function () {
				    ClassicEditor
					    .create(this, {
						    ckfinder: {
							    uploadUrl: '/admin/upload/posts/'
						    }
					    })
					    .catch( error => {
						    console.error('ClassicEditor err: ', error);
					    } );
			    });
			    var $dialog = $('#dialog');
			    $('.modal-body', $dialog).html($form);
			    $('.modal-title', $dialog).html('Создание статьи');
			    $dialog.modal();
		    },
		    error: function () {
			    alert('Ошибка');
		    }
	    });
    });

    //редактирование поста
    $body.on('click', '.btn-edit', function () {
	    var id = $(this).data('id');
	    $.ajax({
		    url: '/admin/form/posts/'+id+'/',
		    type: 'GET',
		    success: function(result) {
			    if(!result.status) return alert('Ошибка');
                var $form = $(result.data);
			    $form.find('textarea.editor').each(function () {
				    ClassicEditor
					    .create(this, {
						    ckfinder: {
							    uploadUrl: '/admin/upload/posts/'
						    }
					    })
					    .catch( error => {
						    console.error('ClassicEditor err: ', error);
					    } );
			    });
			    $form.attr('method', 'put');
			    $form.attr('action', '/admin/save/posts/'+id+'/');
			    var $dialog = $('#dialog');
                $('.modal-body', $dialog).html($form);
                $('.modal-title', $dialog).html('Редактирование статьи');
			    $dialog.modal();
		    },
		    error: function () {
			    alert('Ошибка');
		    }
	    });
    });
</script>