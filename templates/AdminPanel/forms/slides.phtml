<form class="ajax" method="post" action="/admin/save/slides/" autocomplete="off">
    <div class="form-group">
        <label for="sliderImage">
            <img
                    width="100"
                    alt="image"
                    src="<?=empty($data['image']) ? '/src/adminPanel/no_image.png' : $data['image']?>"
            />
        </label>
        <a href="javascript:void(0)" onClick="$('[type=hidden]', $(this).parent()).val('')">Удалить файл</a>
